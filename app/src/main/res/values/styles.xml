<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DetailsTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <!-- Style for the stat cards -->
    <style name="StatCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Style for the stat card text -->
    <style name="StatCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="GoldButton" parent="Widget.AppCompat.Button">
        <item name="android:background">#FFD700</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
