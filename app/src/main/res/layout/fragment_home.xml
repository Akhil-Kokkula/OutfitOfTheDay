<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_profile_placeholder" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Welcome, User!"
        android:textSize="26sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/userImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/wardrobeStatsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wardrobe Stats"
        android:textSize="20sp"
        android:textColor="#555555"
        android:background="#E0E0E0"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/wardrobeStatsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most worn color: Blue\nFavorite brand: Zara\nCost per wear: $1.20"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/wardrobeStatsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/mostUsedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Used Outfits"
        android:textSize="20sp"
        android:textColor="#555555"
        android:background="#E0E0E0"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/wardrobeStatsDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mostUsedOutfitsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mostUsedLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>
